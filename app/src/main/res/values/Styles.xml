<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Quantity Button Style -->
    <style name="QuantityButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Add to Cart Button Style -->
    <style name="AddToCartButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>