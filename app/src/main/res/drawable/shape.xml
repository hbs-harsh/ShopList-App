<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft Gradient Background -->
    <gradient
        android:startColor="#F9F9F9"
        android:endColor="#E0E0E0"
        android:angle="135"/>

    <!-- Rounded Corners -->
    <corners android:radius="40dp" />

    <!-- Optional light border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Slight shadow effect using padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
